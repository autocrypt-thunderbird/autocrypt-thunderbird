# Makefile for package directory

# Specify these as parameters to the make command
XPI_MODULE_VERS = 0.49.1
XPI_MODULE      = enigmail

DEPTH=..\..\..

MODULE          = enigmod

LIBRARY_NAME    = enigmod
MODULE_NAME     = EnigModule

REQUIRES	= xpcom \
		  string \
		  js \
		  caps \
		  uconv \
		  necko \
		  mimetype \
		  xpconnect \
		  $(NULL)

LINCS           = -I..\src

CPP_OBJS=				    \
		.\$(OBJDIR)\nsEnigModule.obj \
		$(NULL)

SUB_LIBRARIES=                            \
                $(DIST)\lib\enigmod_s.lib \
                $(NULL)

LLIBS=				      \
		$(DIST)\lib\xpcom.lib \
		$(LIBNSPR)	      \
		$(NULL)

LCFLAGS = \
        $(LCFLAGS) \
        $(DEFINES) \
        $(NULL)

include <$(DEPTH)\config\rules.mak>

PLATFORM_STR = win32

XPIFILE = $(XPI_MODULE)-$(XPI_MODULE_VERS)-$(PLATFORM_STR).xpi

libs::
	$(MAKE_INSTALL) enigmail.js $(DIST)\bin\components

xpi::
	zip -r $(DIST)\bin\$(XPIFILE) install.js $(XPI_MODULE).spec
	cd $(DIST)\bin
        zip -g $(XPIFILE) \
               components\$(MODULE).dll \
               components\$(XPI_MODULE).xpt \
               components\$(XPI_MODULE).js \
               chrome\$(XPI_MODULE).jar
	echo Created $(DIST)\bin\$(XPIFILE)
