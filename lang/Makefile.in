# Makefile for lang directory

# Specify these as parameters to the make command
XPI_MODULE	= enigmail
XPI_VERS        = 0.76.1

DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/rules.mk

xpi-de-DE::
	./make-lang-xpi.pl de-DE $(XPI_VERS) $(DIST)/bin

xpi-de-AT::
	./make-lang-xpi.pl de-AT $(XPI_VERS) $(DIST)/bin

xpi-fr-FR::
	./make-lang-xpi.pl fr-FR $(XPI_VERS) $(DIST)/bin

xpi-es-AR::
	./make-lang-xpi.pl es-AR $(XPI_VERS) $(DIST)/bin

xpi-es-ES::
	./make-lang-xpi.pl es-ES $(XPI_VERS) $(DIST)/bin

xpi-it-IT::
	./make-lang-xpi.pl it-IT $(XPI_VERS) $(DIST)/bin

xpi-pl-PL::
	./make-lang-xpi.pl pl-PL $(XPI_VERS) $(DIST)/bin

xpi-xx-XX::
	./make-lang-xpi.pl xx-XX $(XPI_VERS) $(DIST)/bin

xpi-zh-CN::
	./make-lang-xpi.pl zh-CN $(XPI_VERS) $(DIST)/bin

xpi-zh-TW::
	./make-lang-xpi.pl zh-TW $(XPI_VERS) $(DIST)/bin

xpi-zh-HK::
	./make-lang-xpi.pl zh-HK $(XPI_VERS) $(DIST)/bin
